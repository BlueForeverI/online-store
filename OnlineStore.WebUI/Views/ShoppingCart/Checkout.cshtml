@model OnlineStore.ViewModels.CheckoutViewModel
@{
    ViewBag.Title = "Завършване на поръчка";
}
@Html.Partial("_FrontPartial")
<div class="box-body">
    @using (Html.BeginForm("PlaceOrder", "ShoppingCart", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10"><h3>Адрес за доставка</h3></div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.FullName, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.FullName, new { @class = "form-control", @placeholder = "Име и фамилия" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Address, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.Address, new { @class = "form-control", @placeholder = "Адрес" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.City, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.City, new { @class = "form-control", @placeholder = "Град" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(c => c.Zip, new { @class = "col-md-2 control-label" })
            <div class="col-sm-10">
                @Html.TextBoxFor(c => c.Zip, new { @class = "form-control", @placeholder = "Пощенски код" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-2 col-sm-10">
                @Html.ActionLink("Назад към количката", "Index", new { controller = "ShoppingCart" }, new { @class="btn btn-danger" })
                <input type="submit" style="padding-left:20px" class="btn btn-primary" value="Завърши поръчка" />
            </div>
        </div>
    }
</div>