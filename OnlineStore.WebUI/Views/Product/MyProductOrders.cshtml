@using OnlineStore.Extension;
@model IEnumerable<OnlineStore.Services.DTO.ProductOrderDTO>
@{
    ViewBag.Title = "Моите поръчки";
}
@Html.Partial("_FrontPartial")

@if (Model.Count() == 0)
{
    <h3 class="box-title">Все още нямате поръчки!</h3>
}
else
{
    foreach (var product in Model)
    {
        <div class="panel panel-info">
            <div class="panel-heading">ID: @product.Id</div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="well well-sm">
                            <div class="row">
                                <div class="col-sm-2">Име на продукта:</div>
                                <div class="col-sm-10">@product.ProductName</div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">Категория:</div>
                                <div class="col-sm-10">@product.CategoryName</div>
                            </div>
                            <div class="row">
                                <div class="col-sm-2">Цена:</div>
                                <div class="col-sm-10">@Html.FormattedCurrency(product.Price)</div>
                            </div>
                        </div>
                    </div>                    
                </div>
                <hr />
                <div>                    
                    <table class="table table-striped" id="modelList">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Потребителско име</th>
                                <th>Адрес</th>
                                <th>Номер за потвърждение</th>
                                <th>Дата на доставка</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var order in product.Orders)
                            {
                                <tr>
                                    <td>@order.OrderId</td>
                                    <td>@order.UserName</td>
                                    <td>@order.Address</td>
                                    <td>@order.ConfirmationNumber</td>
                                    <td>@order.DeliveryDate</td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr><td></td><td></td><td></td><td></td><td></td></tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>    
    }
}